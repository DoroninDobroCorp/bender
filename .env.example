# Parser Maker Configuration
# Copy this file to .env and fill in your values

# === REQUIRED ===
# Cerebras API keys (comma-separated for rotation)
GLM_API_KEYS=your_cerebras_key1,your_cerebras_key2,your_cerebras_key3
# Or single key:
# GLM_API_KEY=your_cerebras_api_key_here

# Project path for Droid
DROID_PROJECT_PATH=/path/to/your/project

# === FALLBACK - Gemini (Google) ===
# ВАЖНО: Разрешены ТОЛЬКО gemini-2.0-flash-exp и gemini-2.5-pro-preview-06-05!
# Comma-separated keys for rotation
GEMINI_API_KEYS=AIzaSyC9ISnqRC6Wr9Km2loyeehXJcEuGpj2cq8,AIzaSyDKahf8OsfhvlEqLFiHGF1M5Yen3YA8f6Y,AIzaSyDLDWtgN32KKhufR4vrK_rW6zk3DZevVB0,AIzaSyB03kOcEbJUlm-4NWc6yRbB1IF6d3HXlwM
# Or single key:
# GEMINI_API_KEY=your_gemini_api_key_here

# === OPTIONAL - Droid ===
DROID_BINARY=droid

# === OPTIONAL - Git ===
AUTO_GIT_PUSH=true

# === OPTIONAL - Display ===
# visible = show all output, silent = only progress
DISPLAY_MODE=visible

# === OPTIONAL - Bender Behavior ===
# After how many failed attempts to escalate to human
BENDER_ESCALATE_AFTER=5

# === OPTIONAL - Watchdog ===
# Seconds between health checks (default: 300 = 5 min)
WATCHDOG_INTERVAL=300
# Total timeout for a task (default: 3600 = 1 hour)
WATCHDOG_TIMEOUT=3600

# === OPTIONAL - Droid Controller ===
# Seconds to wait for Droid response (default: 120)
IDLE_TIMEOUT=120
# Seconds between output checks (default: 2.0)
CHECK_INTERVAL=2.0

# === OPTIONAL - Directories ===
# Logs stored in bender/logs by default
LOG_DIR=logs
STATE_DIR=state
